<section class="hero-banner"{% if include.image %} style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('{{ include.image }}');"{% endif %}>
  <div class="hero-inner">
    <h1>{{ site.title }}</h1>
    {% if include.hero %}
      <h1>{{ include.hero }}</h1>
    {% endif %}
    {% if include.subtitle %}
      <p class="subtitle">{{ include.subtitle }}</p>
    {% endif %}
  </div>
</section>